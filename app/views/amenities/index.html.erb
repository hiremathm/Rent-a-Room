

<h1>Listing Amenities</h1>
<br>
<% if user_signed_in? && (can? :create, Amenity.new) %>
  <%= link_to 'New Amenity', new_amenity_path %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td><%= amenity.name %></td>
        <td><%= amenity.description %></td>
        <td><%= link_to 'Show', amenity %></td>
        <% if user_signed_in? %>
          <% if can? :update, amenity %>
            <td><%= link_to 'Edit', edit_amenity_path(amenity) %></td>
          <% end %>
          <% if can? :destroy, amenity %>
            <td><%= link_to 'Destroy', amenity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @amenities %>
